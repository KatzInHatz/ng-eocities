scrollbarColor = magenta
scrollbarSize = 20px

body, a, a:hover
  cursor: url(http://cur.cursors-4u.net/nature/nat-10/nat924.cur), progress


::-webkit-scrollbar-track
  width scrollbarSize
  height scrollbarSize
  border 1px solid black
  background-color #F5F5F5

::-webkit-scrollbar
  width scrollbarSize
  height scrollbarSize
  background-color #F5F5F5

::-webkit-scrollbar-thumb
  width scrollbarSize
  height scrollbarSize
  background-color scrollbarColor

